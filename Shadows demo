h1
{
  border: 1px solid;
  width: 200px;
  padding: 25px;
  background-color: black;  <!--- background på själva boxen eller ruten--->
  color: white;             <!--- text färg i ruttan --->
  border-color: black;      <!--- rutans färg--->

  text-shadow: 0px 0px 5px yellow, 0px -5px 5px red;


  box-shadow: 10px 10px 5px #666666;

}



