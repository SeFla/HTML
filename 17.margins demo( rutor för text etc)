 /*andra sidan på koden*/

 html
 {
    margin-top: -21px;        /*detta target för h1 plats*/
    margin-left: -8px;
 }

h1
{
  border: 1px solid;
  width: 300px;
  margin-bottom:0px;
  
}

p
{
  border: 1px solid;
  width: 250px;
  padding: 25px;          /*padding är avståndet mellan texten och ruttan*/
         
  
}

#p1                         /* det är klassen i första sidan som heter p1 */
{
   margin: 25px;             /* margin är avståndet mellan ruttan och själva skärmen */
}

#p2
{
  margin-top: 25px;
  margin-right: 75px;
  margin-bottom: 25px;
  margin-left: 75px;      /* margin-left: auto; kommer margin bli på höger sidan medan margin-right: auto, kommer det blir vänster. bara margin auto kommer det bli center.  */
}



